<template format="4"
    revision="1"
    name="Adapter Item"
    description="Táº¡o Adapter, Item, Viewholder">
    
    <category value="AndroidTemplate" />
    <formfactor value="Mobile" />
    
    <parameter id="adapterItemName"
        name="Adapter item name"
        type="string"
        constraints="class|unique|nonempty"
        default="Name"
        help="Name, ex: Coin"/>

    <parameter id="itemEntity"
        name="Entity class name"
        type="string"
        default=""
        help="Entity class name, ex: CoinEntity" />


    <parameter
            id="layoutName"
            name="Layout Name"
            type="string"
            constraints="layout|unique|nonempty"
            suggest="item_${camelCaseToUnderscore(adapterItemName)}"
            help="The name of the layout to create for the item"/>

    <parameter
        id="packageName"
        name="Package name"
        type="string"
        constraints="package"
        default="com.mycompany.myapp" />


    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
